@model Sistema_RRHH_Nexora.Models.SolicitudesCuenta

@{
	ViewData["Title"] = "SolicitarCuenta";
}

<div class="primerDIV">
	<div class="contenedor">
		<div class="lado-derecho">
			<h2>Solicitar Cuenta</h2>

			@if (TempData["Mensaje"] != null)
			{
				<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
					<symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
						<path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
					</symbol>
				</svg>

				<div class="alert alert-primary d-flex align-items-center" role="alert">
					<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:"><use xlink:href="#info-fill" /></svg>
					<div>
						<strong>@TempData["Mensaje"]</strong>
					</div>
				</div>
			}

			<form asp-action="SolicitarCuenta" style="width: 100%;">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group">
					<label asp-for="ID_Empleado" class="control-label"></label>
					<input asp-for="ID_Empleado" class="form-control input-estilo" />
					<span asp-validation-for="ID_Empleado" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="CorreoCuenta" class="control-label"></label>
					<input asp-for="CorreoCuenta" class="form-control input-estilo" />
					<span asp-validation-for="CorreoCuenta" class="text-danger"></span>
				</div>

				<div class="form-group" style="text-align: center;">
					<input type="submit" value="Enviar Solicitud" class="boton-estilo" />
				</div>
			</form>

			<div style="margin-top: 10px;">
				<a asp-controller="Home" asp-action="Index" style="color: #0072ff; text-decoration: none;">Atrás</a>
			</div>

		</div>
	</div>
</div>
